---
import { TableHead } from '@/components/ui/table'
import { z } from 'astro:content'

const schema = z.object({
	align: z
		.enum(['left', 'center', 'right', 'justify', 'char'])
		.optional()
		.catch(undefined),
})

export type Props = z.infer<typeof schema>

const props = schema.parse(Astro.props)
---

<TableHead {...props}>
	<slot />
</TableHead>
