---
import LayoutDefault from '@/layouts/default.astro'
import { buttonVariants } from '@/components/ui/button'
import { cn } from '@/lib/utils'
import { ModeToggle } from '@/components/mode-toggle'
---

<LayoutDefault title="Souls Speedruns">
	<div class="fixed top-2 right-2">
		<ModeToggle client:load />
	</div>
	<main
		class="container mx-auto max-w-7xl flex items-center min-h-screen justify-center"
	>
		<div class="flex flex-col items-center space-y-3">
			<h1 class="scroll-m-20 text-7xl font-extrabold tracking-tight">404</h1>
			<a
				href="/"
				class={cn(
					buttonVariants({
						variant: 'link',
					}),
				)}
				>Return home</a
			>
		</div>
	</main>
</LayoutDefault>
